@{
}

@model List<MovieAdd>

<table class="table table-bordered"> <!-- Table to display the information that we get from the forms that are filled out -->
    <thead class="fw-bold"> <!-- Table head, put the column names in -->
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Copied to Plex</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    @foreach(var x in Model) // could put whatever name we want instead of "x", it is a temporay variable
    {
        <tbody>
            <td>@x.Category</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.CopiedToPlex</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>

            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
        </tbody>
    }
    
</table>