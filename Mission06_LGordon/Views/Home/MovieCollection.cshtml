@model MovieAdd

<h1>Movie Collection Form</h1>

<form method="post">

    <input type="hidden" asp-for="MovieId" />

    <br />
    <select asp-for="Category">
        <option value="">Select a Category</option>
        @foreach (Categories c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option> //showing the user the name, but selects the int for the database
        }
    </select>

    <br />
    <br />
    <label asp-for="Title">Title:</label>
    <input asp-for="Title"/>
    <br />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year"/>
    <br />
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director"/>
    <br />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <br />
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo"/>
    <br />
    <br />
    <label asp-for="CopiedToPlex">Copied to Plex:</label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input type="text" maxlength="25" asp-for="Notes"/>
    <br />
    <br />
    <button type="submit">Add Movie</button>

    <div asp-validation-summary="All"></div>

</form>